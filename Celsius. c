#include <stdio.h>

float convertToCelsius(float fahrenheit) {
    float celsius = (fahrenheit - 32) * (5.0 / 9.0);
    return celsius;
}

int main() {
    float fahrenheit_temp = 68.0; // Example
    float celsius_temp = convertToCelsius(fahrenheit_temp);
    printf("%.2f Fahrenheit is equal to %.2f Celsius\n", fahrenheit_temp, celsius_temp);
    return 0;
}
